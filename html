  <script>
document.addEventListener("DOMContentLoaded", () => {
  // ===== HERO SLIDER =====
  const sliderTrack = document.querySelector('.slider-track');
  const dots = document.querySelectorAll('.dot');
  const slides = document.querySelectorAll('.slide');
  const slider = document.querySelector('.slider-container');

  let index = 0;
  let isDragging = false;
  let startX = 0;
  let currentX = 0;

  function goToSlide(i) {
    index = (i + slides.length) % slides.length;
    sliderTrack.style.transform = `translateX(-${index * 100}%)`;
    dots.forEach(dot => dot.classList.remove('active'));
    dots[index].classList.add('active');
  }

  // Auto scroll every 5s
  let auto = setInterval(() => goToSlide(index + 1), 5000);

  // Dot click
  dots.forEach(dot => {
    dot.addEventListener('click', () => {
      clearInterval(auto);
      goToSlide(Number(dot.dataset.index));
      auto = setInterval(() => goToSlide(index + 1), 5000);
    });
  });

  dots.forEach((dot, idx) => {
  dot.dataset.index = idx; // ensure index is set
  dot.addEventListener('click', () => {
    clearInterval(autoSlide);
    goToSlide(idx);       // use the correct index
    autoSlide = setInterval(() => goToSlide(index + 1), 5000);
  });
});

  // Drag / swipe
  slider.addEventListener("pointerdown", (e) => {
    isDragging = true;
    startX = e.clientX;
  });
  slider.addEventListener("pointermove", (e) => {
    if (!isDragging) return;
    currentX = e.clientX;
  });
  slider.addEventListener("pointerup", () => {
    if (!isDragging) return;
    const diff = currentX - startX;
    if (diff > 50) goToSlide(index - 1);
    if (diff < -50) goToSlide(index + 1);
    isDragging = false;
  });
  slider.addEventListener("pointerleave", () => { isDragging = false; });
  goToSlide(index);

  // ===== CART COUNT =====
  let cartCount = 0;
  const cartCountElement = document.getElementById("cart-count");

  const addToCartButtons = document.querySelectorAll(".product-card button");
  addToCartButtons.forEach(button => {
    button.addEventListener("click", () => {
      cartCount++;
      cartCountElement.textContent = cartCount;
    });
  });

  // ===== HAMBURGER =====
  const hamburger = document.getElementById("hamburger");
  const navMenu = document.querySelector(".nav-menu");
  hamburger.addEventListener("click", () => {
    navMenu.classList.toggle("show");
  });

  // ===== BEST SELLERS CAROUSEL =====
  (function(){
    const carousel   = document.querySelector('.best-sellers .bs-carousel');
    const track      = document.querySelector('.best-sellers .bs-track');
    const cards      = Array.from(document.querySelectorAll('.best-sellers .product-card'));
    const dotsWrap   = document.querySelector('.best-sellers .bs-dots');
    const cartCountEl= document.getElementById('cart-count');

    if (!carousel || !track || cards.length === 0) return;

    let perView    = getPerView();
    let page       = 0;
    let totalPages = Math.max(1, Math.ceil(cards.length / perView));
    let isDown     = false;
    let startX     = 0;
    let lastX      = 0;

    makeDots();
    goTo(0);
    tiltBind();
    bindAddToCart();

    // Resize
    window.addEventListener('resize', () => {
      perView = getPerView();
      totalPages = Math.max(1, Math.ceil(cards.length / perView));
      makeDots();
      goTo(Math.min(page, totalPages - 1), true);
    });

    // Drag / swipe
    carousel.addEventListener('pointerdown', (e) => {
      isDown = true;
      carousel.classList.add('grabbing');
      startX = e.clientX;
      lastX  = e.clientX;
    });
    window.addEventListener('pointermove', (e) => {
      if (!isDown) return;
      lastX = e.clientX;
    });
    window.addEventListener('pointerup', () => {
      if (!isDown) return;
      const dx = lastX - startX;
      if (dx > 50) goTo(page - 1);
      if (dx < -50) goTo(page + 1);
      isDown = false;
      carousel.classList.remove('grabbing');
    });
    carousel.addEventListener('pointerleave', () => {
      isDown = false;
      carousel.classList.remove('grabbing');
    });

    // Keyboard navigation
    carousel.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowLeft') goTo(page - 1);
      if (e.key === 'ArrowRight') goTo(page + 1);
    });

    function getPerView() {
      const w = window.innerWidth;
      if (w <= 560) return 1;
      if (w <= 900) return 2;
      if (w <= 1200) return 3;
      return 4;
    }

    function goTo(p, instant=false) {
      page = (p + totalPages) % totalPages;
      const pageWidth = carousel.clientWidth;
      track.style.transitionDuration = instant ? '0ms' : '600ms';
      track.style.transform = `translateX(-${page * pageWidth}px)`;
      highlightDot(page);
    }

    function makeDots() {
      dotsWrap.innerHTML = '';
      for (let i = 0; i < totalPages; i++) {
        const span = document.createElement('span');
        span.className = 'bs-dot' + (i === page ? ' active' : '');
        span.dataset.index = i;
        dotsWrap.appendChild(span);
      }
    }
    function highlightDot(i) {
      [...dotsWrap.children].forEach((d, idx) => {
        d.classList.toggle('active', idx === i);
      });
    }

    // Tilt effect
    function tiltBind() {
      cards.forEach(card => {
        card.addEventListener('mousemove', (e) => {
          const rect = card.getBoundingClientRect();
          const x = (e.clientX - rect.left) / rect.width;
          const y = (e.clientY - rect.top)  / rect.height;
          const rx = (0.8 - y) * 4;
          const ry = (x - 0.5) * 4;
          card.style.transform = `translateY(-6px) rotateX(${rx}deg) rotateY(${ry}deg)`;
        });
        card.addEventListener('mouseleave', () => { card.style.transform = ''; });
      });
    }

    // Add-to-cart + confetti
    function bindAddToCart() {
      const buttons = document.querySelectorAll('.best-sellers .add-to-cart');
      buttons.forEach(btn => {
        btn.addEventListener('click', (e) => {
          e.stopPropagation();
          const btnRect = btn.getBoundingClientRect();
          bumpCart();
          confetti(btn, btnRect.width/2, 0);
          btn.animate([{ transform: 'translateY(0) scale(1)' }, { transform: 'translateY(-2px) scale(1.03)' }, { transform: 'translateY(0) scale(1)' }], { duration: 220, easing: 'ease-out' });
        });
      });
    }

    function bumpCart() {
      let count = parseInt(cartCountEl.textContent || '0', 10);
      count += 1;
      cartCountEl.textContent = count;
      cartCountEl.animate([{ transform: 'scale(1)' }, { transform: 'scale(1.25)' }, { transform: 'scale(1)' }], { duration: 220, easing: 'ease-out' });
    }

    function confetti(anchorEl, ox, oy) {
      const host = anchorEl.closest('.product-card') || anchorEl.parentElement;
      const hostRect = host.getBoundingClientRect();
      const btnRect  = anchorEl.getBoundingClientRect();
      const originX = btnRect.left - hostRect.left + ox;
      const originY = btnRect.top  - hostRect.top  + oy;
      const pieces = 14;
      for (let i = 0; i < pieces; i++) {
        const s = document.createElement('span');
        s.className = 'confetti-piece';
        const dx = (Math.random()*160 - 80) + 'px';
        const dy = (-Math.random()*140 - 40) + 'px';
        const rot = (Math.random()*540 - 270) + 'deg';
        const hue = Math.floor(Math.random()*360);
        s.style.background = `hsl(${hue} 80% 70%)`;
        s.style.left = originX + 'px';
        s.style.top  = originY + 'px';
        s.style.setProperty('--dx', dx);
        s.style.setProperty('--dy', dy);
        s.style.setProperty('--rot', rot);
        host.appendChild(s);
        setTimeout(() => s.remove(), 750);
      }
    }

  })();
});
</script>

</body>
</html>
